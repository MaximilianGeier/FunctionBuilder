<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FunctionBuilder.GUI.MainWindow"
        Title="FunctionBuilder.GUI">

	<StackPanel Margin="10">
		<TextBox HorizontalAlignment="Left"
				 Name="InputBox"
				 Watermark="Введите уравнение"></TextBox>
		<Button Name="InputButton"
				Click="InputButton_Click"
				Background="Green">Вычислить</Button>
		<TextBlock Name="OutputResult"></TextBlock>
	</StackPanel>
</Window>
